<%= form_for([@product, @product.comments.build]) do |f| %>
			  <p class='comment-label'>
			    <%= f.label :commenter, 'Name' %><br />
			    <%= f.text_field :commenter %>
			  </p>
			  <p class='comment-label'>
			    <%= f.label :body, 'Comment' %><br />
			    <%= f.text_area :body %>
			  </p>
			  <p class="create-comment">
			    <%= f.submit %>
			  </p>
			<% end %>