<div id='container_signup'>
  <div class='signup'>
<h1>Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><br />
  <%= f.text_field :username, placeholder: 'Username', :autofocus => true %></div>

  <div><br />
  <%= f.email_field :email, placeholder: 'Email' %></div>

  <div><br /> 
  <%= f.password_field :password, placeholder: 'Password' %></div>

  <div><br />
  <%= f.password_field :password_confirmation, placeholder: 'Password confirmation' %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>


<%= render "users/shared/links" %>

</div>
</div>


